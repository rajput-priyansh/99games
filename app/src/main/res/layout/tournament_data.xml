<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tournamentcardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_round_corner_blue"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <!--===========================================-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageview"
                                android:layout_width="match_parent"
                                android:layout_height="85dp"
                                android:scaleType="fitXY" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="85dp"
                                android:background="@color/transperent" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <!--1st-->
                    <LinearLayout
                        android:id="@+id/llWrap"
                        android:layout_width="match_parent"
                        android:layout_height="75dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="75dp">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/piniv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_pin" />

                            </LinearLayout>

                            <com.egamez.org.widget.CustomTextView
                                android:id="@+id/tvGameName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:gravity="center"
                                android:text="PUBG Destroyer #8455"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:translationZ="@dimen/margin_10"
                                app:fontTextStyle="4" />

                        </RelativeLayout>

                    </LinearLayout>

                    <!--2nd-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llWrap"
                        android:background="@drawable/btn_orange_round_top"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:translationZ="@dimen/margin_10">

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvmatchtitleandnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="PUBG Destroyer #8455"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                    <!--button center-->
                    <LinearLayout
                        android:id="@+id/llType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llWrap"
                        android:layout_marginTop="-17dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:translationZ="@dimen/margin_10">

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/btn_orange_round"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:text="Solo"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                </RelativeLayout>

                <!--===========================================-->

                <LinearLayout
                    android:id="@+id/roomidpassll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/newgreen"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">


                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/rid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Click here for Id and Password"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            app:fontTextStyle="3" />

                    </LinearLayout>


                </LinearLayout>


                <!--1.1-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/overlay_dark_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <com.egamez.org.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Date"
                            android:textColor="@color/overlay_dark_60"
                            android:textSize="12sp"
                            app:fontTextStyle="2" />

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.7dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <com.egamez.org.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Time"
                            android:textColor="@color/overlay_dark_60"
                            android:textSize="12sp"
                            app:fontTextStyle="2" />

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvTimes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.7dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <com.egamez.org.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Map"
                            android:textColor="@color/overlay_dark_60"
                            android:textSize="12sp"
                            app:fontTextStyle="2" />

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvmap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Map"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.7dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <com.egamez.org.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Perspective"
                            android:textColor="@color/overlay_dark_60"
                            android:textSize="12sp"
                            app:fontTextStyle="2" />

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Tpp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/overlay_dark_10" />

                <!--1.2-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/overlay_dark_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <com.egamez.org.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Prizepool"
                            android:textColor="@color/overlay_dark_60"
                            android:textSize="12sp"
                            app:fontTextStyle="2" />

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvtotalwin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@color/white"
                            android:drawableRight="@drawable/keyboard_arrow_down_tornamnet_data"
                            android:drawableTint="@color/overlay_dark_60"
                            android:gravity="center"
                            android:text="Prize Pool"
                            android:textColor="@color/newgreen"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <com.egamez.org.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Per Kill"
                            android:textColor="@color/overlay_dark_60"
                            android:textSize="12sp"
                            app:fontTextStyle="2" />

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tvperkill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <com.egamez.org.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Entry Fee"
                            android:textColor="@color/overlay_dark_60"
                            android:textSize="12sp"
                            app:fontTextStyle="2" />

                        <com.egamez.org.widget.CustomTextView
                            android:id="@+id/tventryfee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="₹999"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            app:fontTextStyle="4" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/progressbar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="66"
                            android:progressBackgroundTint="#209cee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.egamez.org.widget.CustomTextView
                                android:id="@+id/remainingtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="588 remaining"
                                android:textColor="@color/overlay_dark_60"
                                android:textSize="12sp"
                                android:visibility="visible"
                                app:fontTextStyle="2" />

                            <com.egamez.org.widget.CustomTextView
                                android:id="@+id/totalPlayersJoined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="22 players joined"
                                android:textColor="@color/overlay_dark_60"
                                android:textSize="14sp"
                                android:visibility="visible"
                                app:fontTextStyle="2" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--bottom-->

                <LinearLayout
                    android:id="@+id/llJoinButtonWrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange_round_bottom"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/joincardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/joinll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.egamez.org.widget.CustomTextView
                                android:id="@+id/join"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/newred"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/join_now_select_time"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:fontTextStyle="4" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
