<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.egamez.org.ui.activities.ReferandEarnActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.egamez.org.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/refer_more_to_earn_more"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/newgreen"
            app:fontTextStyle="4" />

        <com.egamez.org.widget.CustomTextView
            android:id="@+id/referdetail"
            style="@style/Base.Widget.MaterialComponents.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="*******************"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/newblack"
            app:fontTextStyle="3" />

        <com.egamez.org.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/your_referral_code"
            android:textColor="@color/newgreen"
            app:fontTextStyle="3" />

        <com.egamez.org.widget.CustomTextView
            android:id="@+id/promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/copy_icon"
            android:drawablePadding="30dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text="REFERRAL CODE"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/newblack"
            app:fontTextStyle="4" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="0dp"
            android:src="@drawable/how_refer_earn_process" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <com.egamez.org.widget.CustomButton
                android:id="@+id/refernow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/newgreen"
                android:paddingTop="5dp"
                android:text="@string/refer_now"
                android:textColor="@color/white"
                app:fontTextStyle="4" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_baner"></com.google.android.gms.ads.AdView>


</LinearLayout>