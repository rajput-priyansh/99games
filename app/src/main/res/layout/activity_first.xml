<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/roadtopro_splash_page"
    tools:context="com.egamez.org.ui.activities.FirstActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_app_splash" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_app_logo" />

    <com.egamez.org.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:fontTextStyle="4"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:text="@string/lbl_powered_by_metaclops"
        />

</RelativeLayout>