<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/aspect_lib_margin_16dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/white"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/height_aspect_a_5"
                android:layout_height="@dimen/height_aspect_a_5"
                android:scaleType="fitXY"
                android:src="@mipmap/app_logo"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/aspect_lib_margin_16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MetaClops"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/des_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="22 Mar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/greyDark"
                    android:textStyle="normal" />
            </LinearLayout>
            <com.egamez.org.widget.CustomButton
                android:id="@+id/confirm_button"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@color/color2"
                android:paddingTop="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Join"
                android:textSize="8sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                app:fontTextStyle="4" />
        </LinearLayout>

    </LinearLayout>
