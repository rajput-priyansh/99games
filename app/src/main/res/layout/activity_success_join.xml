<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.egamez.org.ui.activities.SuccessJoinActivity"
   >



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:src="@drawable/join_success_image"/>
    <com.egamez.org.widget.CustomTextView
        android:id="@+id/successjoinmatchnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        app:fontTextStyle="3"
        android:text="000000000000000000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/newblack"
       />

    <com.egamez.org.widget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/you_have_joined_successfully"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/newgreen"
        app:fontTextStyle="4"
       />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        >
        <com.egamez.org.widget.CustomButton
            android:id="@+id/joinsuccesshome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/newgreen"
            android:paddingTop="5dp"
            android:text="@string/home"
            android:textColor="@color/white"
            app:fontTextStyle="4" />
    </androidx.cardview.widget.CardView>


</LinearLayout>
