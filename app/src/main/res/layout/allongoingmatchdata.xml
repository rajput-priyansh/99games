<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/ongoingtournamentcardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"

            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ongoingimageview"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:scaleType="fitXY"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5px"
                        android:layout_marginTop="5px"
                        android:layout_marginRight="5px"
                        android:layout_marginBottom="5px"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/ongoingtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:background="@color/newred"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="0dp"

                        android:text="Solo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5px"
                        android:layout_marginTop="5px"
                        android:layout_marginRight="5px"
                        android:layout_marginBottom="5px"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/ongoingtvmap"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:background="@color/newgreen"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="0dp"
                        android:text="Infection Mode"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5px"
                        android:layout_marginTop="5px"
                        android:layout_marginRight="5px"
                        android:layout_marginBottom="5px"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true">
                    <TextView
                        android:id="@+id/ongoingversion"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:autoSizeStepGranularity="2dp"
                        android:autoSizeTextType="uniform"
                        android:background="@color/newblue"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"

                        android:paddingRight="5dp"
                        android:paddingBottom="0dp"
                        android:text="TPP"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <TextView
                    android:id="@+id/ongoingmatchtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/testbomb"
                    android:drawablePadding="10dp"
                    android:text="PUBG Destroyer #8455"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/newblack"
                    android:textStyle="bold"

                   />

                <LinearLayout
                    android:id="@+id/roomidpassllinlive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/newgreen"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">


                        <TextView
                            android:id="@+id/ridinlive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Click here for Id and Password"

                            android:textAppearance="@style/TextAppearance.AppCompat.Small"

                            android:textColor="@color/white"
                            />

                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:background="#D3DADADA"
                    android:orientation="horizontal">




                    <TextView
                        android:id="@+id/ongoingtime"
                        android:layout_width="wrap_content"

                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="perkill"
                        android:textColor="@color/newred"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/ongoingprizewin"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Prize Pool"
                        android:textColor="@color/newgreen"

                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/ongoingperkill"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="perkill"
                        android:textColor="@color/newblue"
                        android:textSize="16sp"
                        />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"

                    android:gravity="center"
                    android:orientation="horizontal"

                    >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/spectate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        >
                        <LinearLayout
                            android:id="@+id/ongoingll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/newred"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">


                            <TextView
                                android:id="@+id/ongoingentryfee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@color/newred"
                                android:drawableLeft="@drawable/resize_coin1620"
                                android:drawablePadding="5dp"
                                android:gravity="bottom"
                                android:paddingTop="5dp"
                                android:text="₹999"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/ongoingspactatetv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/newred"
                                android:gravity="bottom"
                                android:paddingLeft="5dp"

                                android:paddingTop="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="0dp"
                                android:text="@string/spectate"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>






</LinearLayout>