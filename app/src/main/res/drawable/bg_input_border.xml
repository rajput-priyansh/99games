<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#5743a8"
                android:endColor="#876df4"
                android:gradientRadius="180"
                android:startColor="#3e3065" />

            <stroke
                android:width="@dimen/_2sdp"
                android:color="@color/transperent" />

            <corners android:radius="@dimen/_8sdp"/>
        </shape>
    </item>
    <item
        android:bottom="@dimen/_2sdp"
        android:left="@dimen/_2sdp"
        android:right="@dimen/_2sdp"
        android:top="@dimen/_2sdp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/transperent" />
            <corners android:radius="@dimen/_2sdp"/>
        </shape>
    </item>

</layer-list>